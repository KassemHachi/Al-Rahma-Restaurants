<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="180dp"
				android:padding="8dp"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/restlg"
					android:scaleType="centerInside"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/addrestl"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:background="#196A87"
				android:gravity="right|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/addrestt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="اضافة مطعم رحمة"
					android:textSize="18sp"
					android:textColor="#5BC1CE"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/addratel"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:background="#196A87"
				android:gravity="right|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/addratet"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="تقييم و اقتراح "
					android:textSize="18sp"
					android:textColor="#5BC1CE"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/aboutl"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:background="#196A87"
				android:gravity="right|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/aboutt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="حول التطبيق"
					android:textSize="18sp"
					android:textColor="#5BC1CE"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/shareappl"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:background="#196A87"
				android:gravity="right|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/shareappt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="مشاركة التطبيق"
					android:textSize="18sp"
					android:textColor="#5BC1CE"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/reportl"
				android:layout_width="match_parent"
				android:layout_height="70dp"
				android:layout_marginTop="10dp"
				android:padding="8dp"
				android:background="#196A87"
				android:gravity="right|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/reportt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="ابلاغ عن خطأ "
					android:textSize="18sp"
					android:textColor="#5BC1CE"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
